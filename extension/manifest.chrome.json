{
  "manifest_version": 3,
  "name": "AI Video Quiz Assistant",
  "description": "Generate interactive quizzes for YouTube videos with real-time processing and overlays.",
  "version": "0.1.0",
  "action": {
    "default_title": "AI Video Quiz"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "notifications"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*",
    "http://*/api/*",
    "https://*/api/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.html",
        "overlay.css",
        "sidepanel.html",
        "sidepanel.js",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "sidepanel.html",
    "open_in_tab": true
  }
}
