{
  "manifest_version": 2,
  "name": "AI Video Quiz Assistant",
  "description": "Generate interactive quizzes for YouTube videos with real-time processing and overlays.",
  "version": "0.1.0",
  "applications": {
    "gecko": {
      "id": "ai-video-quiz@example.com",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "AI Video Quiz",
    "default_popup": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "*://*.youtube.com/*",
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*",
    "http://*/api/*",
    "https://*/api/*"
  ],
  "web_accessible_resources": [
    "overlay.html",
    "overlay.css",
    "sidepanel.html",
    "sidepanel.js",
    "icons/*"
  ]
}
