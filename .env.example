# AI Video Quiz Generator - Environment Configuration

# API Settings
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Hardware Settings (CRITICAL - 8GB VRAM limit)
MAX_VRAM_GB=7.4
DEVICE=cuda
TORCH_DTYPE=float16

# Model Settings
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

QWEN_MODEL_PATH=Qwen/Qwen2-VL-2B-Instruct
QWEN_MAX_PIXELS=151200
QWEN_MIN_PIXELS=50176

# Ollama Settings (LLM via Ollama - make sure ollama serve is running)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct-q4_K_M
LLAMA_MAX_LENGTH=4096
LLAMA_TEMPERATURE=0.7

# Video Processing Settings
MAX_VIDEO_SIZE_MB=500
MAX_VIDEO_DURATION_MINUTES=60
FRAME_EXTRACTION_FPS=0.1
MAX_FRAMES_PER_VIDEO=100

# Processing Settings
CHUNK_DURATION_SECONDS=30
MIN_SEGMENT_DURATION=30
MAX_SEGMENT_DURATION=300

# Quiz Generation
QUIZZES_PER_SEGMENT=2
QUIZ_OPTIONS_COUNT=4

# Task Management
TASK_TIMEOUT_SECONDS=3600
CLEANUP_TEMP_FILES_AFTER_SECONDS=86400

# YouTube Download
YT_DLP_FORMAT=bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best
YT_DLP_MAX_FILESIZE=500M
